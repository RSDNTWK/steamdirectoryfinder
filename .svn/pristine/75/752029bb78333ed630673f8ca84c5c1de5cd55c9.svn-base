using System;
using System.IO;
using System.Windows.Forms;

namespace steamdirectoryfinder
{
    public partial class ServerConfiguration : Form
    {
        private static string MainFolder;
        private static string OcServerInstallPath;
        public ServerConfiguration(String path)
        {
            InitializeComponent();
            OcServerInstallPath = path;
            MainFolder = Directory.GetParent(OcServerInstallPath).FullName;
        }

        private void button1_Click_1(object sender, EventArgs e)
        {
            ServerStuff.CheckifDirectoryexistsorcreateit(OcServerInstallPath);
            ServerStuff.CheckifDirectoryexistsorcreateit(Directory.GetCurrentDirectory() + "\\steamcmd");
            ServerStuff.DownloadSteamcmd();
            ServerStuff.ExtractServerResources();
            ServerStuff.InstallServer(textBox1.Text, textBox2.Text, MainFolder);
            ServerStuff.ExtractAndDelete(MainFolder);
            ServerStuff.CreateNeededFiles(MainFolder);
            this.Close();
        }

        private void label1_Click(object sender, EventArgs e)
        {
        }

        private void ServerConfiguration_Load(object sender, EventArgs e)
        {
        }
    }
}